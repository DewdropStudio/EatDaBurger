<div class="container">
    {{!-- header --}}
	<div class="row header text-center"> 
		<center>
			<img class="img-responsive icon" width="200" height="40" src="./assets/images/burger.png">
		</center>
		<h1>Eat-da-Burger!</h1>
	

		<p class="instructions">Click the fork and spoon to eat any burger in stock (left). Click the burger to order more of any burger out of stock (right). Don't see a burger you want to eat? Order your very own.</p>
	</div> <!-- header row -->

	<div class="row orderup  text-center">
		<input type="text" class="form-control" id="name" placeholder="My delicious burger is called..."><button type="submit" id="submit">Order up!</button>
	</div> <!-- survey row -->

	<div class="row"> <!-- burgers -->
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6"> <!-- left column -->
			<h1 id="left">To Be Eaten...</h1>
			{{#each burgers}}
			{{#unless devoured}}
			<div class="burgerblock">
				{{!-- <img src="./assets/img/burgericon.png " width="20" height="20" class="tinyicon burgericon"> --}}
				
				<img src="./assets/img/eaticon.png" width=30 height="30" class="tinyicon eaticon" data-id="{{this.id}}"><h2>{{burger_name}}</h2>
			</div>
			{{/unless}}
			{{/each}}
		</div> <!-- left column -->

		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6"> <!-- right column -->
			<h1 id="right">Already Devoured!</h1>
			{{#each burgers}}
			{{#if devoured}}
			<div class="burgerblock">
				{{!-- <img src="./assets/img/eaticon.png" class="tinyicon burgericon eaten"> --}}
				
				<img src="./assets/img/burgericon.png" width=20 height="20" class="tinyicon waitericon" data-id="{{this.id}}"><h2>{{burger_name}}</h2>
			</div>
			{{/if}}
			{{/each}}
		</div> <!-- right column -->
	</div> <!-- burgers row -->

